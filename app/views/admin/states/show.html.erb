<h1><%= @state.name %></h1>

<div class="river-trips-container">
  <% @state.rivers.each do |river| %>
  <div class="river-trips">
    <%= link_to river.name, admin_state_river_path(@state, river) %>
  </div>
  <% end %>
</div>


<div class="btn">
  <%= link_to "Add River", new_admin_state_river_path(@state) %>
</div>

<div class="btn">
  <%= link_to "Edit State", edit_admin_state_path(@state) %>
</div>

<div class="btn">
  <%= link_to "Delete State", admin_state_path(@state), method: "delete" %>
</div>
